#-------------------------------------------------------------------------------
#
# depending on the compilation flags choose the right compilers and options
#
#-------------------------------------------------------------------------------
#
#
#-------------------------------------------------------------------------------
#
# compiler and linker setup
#
ifeq ($(MPI),Y)
FC       = mpif90
else
FC       = gfortran
endif
LD       = $(FC)

# compiler and linker flags
#
ifeq ($(DEBUG),Y)
FFLAGS   = -g -O2 -DDEBUG
else
FFLAGS   = -O2
endif

LDFLAGS  = $(FFLAGS)

# libraries
#
LIBS     =

#-------------------------------------------------------------------------------
#
ifeq ($(STATIC),Y)
LDFLAGS += -static
endif

ifeq ($(SIGNALS),Y)
FFLAGS += -DSIGNALS
endif

FFLAGS  += -default-real-8 -default-double-8

ifeq ($(MPI),Y)
FFLAGS  += -DMPI
endif

ifeq ($(OUTPUT),HDF5)
FFLAGS  += -I/usr/include
LIBS    += -lhdf5_fortran -lhdf5 -lz
endif
#
#-------------------------------------------------------------------------------
